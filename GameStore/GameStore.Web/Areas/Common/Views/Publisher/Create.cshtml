@model GameStore.Web.Areas.Common.Models.PublisherViewModel

@{
    this.ViewBag.Title = "Create";
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (this.Html.BeginForm("Create", "Publisher", FormMethod.Post))
{
    @(this.Html.AntiForgeryToken())

    <hr/>
    <div class="form-horizontal col-md-10">
        <h4>Create publisher</h4>
        <div class="form-group">
            @(this.Html.LabelFor(model => model.CompanyName, new { @class = "control-label col-md-2" }))
            <div class="col-md-3">
                @(this.Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" }))
                @(this.Html.ValidationMessageFor(model => model.CompanyName, string.Empty, new { @class = "text-danger" }))
            </div>
        </div>

        <div class="form-group">
            @(this.Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" }))
            <div class="col-md-3">
                @(this.Html.TextBoxFor(model => model.Description, new { @class = "form-control" }))
                @(this.Html.ValidationMessageFor(model => model.Description, string.Empty, new { @class = "text-danger" }))
            </div>
        </div>

        <div class="form-group">
            @(this.Html.LabelFor(model => model.HomePage, new { @class = "control-label col-md-2" }))
            <div class="col-md-3">
                @(this.Html.TextBoxFor(model => model.HomePage, new { @class = "form-control" }))
                @(this.Html.ValidationMessageFor(model => model.HomePage, string.Empty, new { @class = "text-danger" }))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}