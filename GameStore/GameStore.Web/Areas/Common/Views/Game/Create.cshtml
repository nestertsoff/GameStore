@model GameStore.Web.Areas.Common.Models.GameViewModel

@{
    this.ViewBag.Title = "Create";
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (this.Html.BeginForm("Create", "Game", FormMethod.Post))
{
    @(this.Html.AntiForgeryToken())

    <hr/>
    <div class="form-horizontal col-md-10">
        @(this.Html.ValidationSummary(true, "", new { @class = "text-danger" }))

        @(this.Html.EditorForModel("NewGameTemplate"))

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}